<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SierraDanielAppApuntes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SierraDanielAppApuntes"
    xmlns:views="clr-namespace:SierraDanielAppApuntes.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SierraDanielAppApuntes">

    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'notes.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'halo.png'}" />
    </TabBar>

</Shell>
